  Vcl.Grids, Vcl.DBGrids, frameBotoes, Vcl.ComCtrls, Vcl.Mask;

type
  TPessoa = class(TForm)
    Panel1: TPanel;
    FrmBotoes1: TFrmBotoes;
    DBGrid1: TDBGrid;
    LblCodigo: TLabel;
    EdtCodigo: TEdit;
